                                <TextBlock x:Name="degreesmnd3" Text="-4" HorizontalAlignment="Right" Margin="0,0,10,0" FontFamily="Tempus Sans ITC" VerticalAlignment="Bottom"/>
                                <TextBlock Text="°" HorizontalAlignment="Right" Margin="0,0,1,0" FontFamily="Tempus Sans ITC"/>
                            </Grid>
                            <TextBlock x:Name="comm3" Text="Mostly cloudy" Margin="5,10,0,0" FontFamily="Tempus Sans ITC"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="day4" Margin="390,-154,0,0" IsSelected="False" Width="120" HorizontalAlignment="Left">
                        <StackPanel Orientation="Vertical" Height="150" Width="120" Margin="-10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="day4ofweek" Text="Wed" Margin="5" FontFamily="Tempus Sans ITC" FontWeight="Bold"/>
                                <TextBlock x:Name="date4" Text="29" Margin="5" FontFamily="Tempus Sans ITC" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock x:Name="weatherd4sun" Visibility="Collapsed" HorizontalAlignment="Center" FontFamily="segoe mdl2 assets" Text="&#xec8a;" FontSize="40" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBlock x:Name="weatherd4cloud" Visibility="Visible" HorizontalAlignment="Center" FontFamily="segoe mdl2 assets" Text="&#xe753;" FontSize="40" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBlock x:Name="weatherd4snow" Visibility="Collapsed" HorizontalAlignment="Center" FontFamily="segoe ui symbol" Text="❄" FontSize="30" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <Grid Margin="0,10,0,0" HorizontalAlignment="Center" Width="100">
                                <TextBlock x:Name="degreesmxd4" Text="0" HorizontalAlignment="Left" Margin="10,0,0,0" FontFamily="Tempus Sans ITC" FontSize="20"/>
                                <TextBlock Text="°" Margin="30,0,0,0" FontFamily="Tempus Sans ITC"/>
                                <TextBlock x:Name="degreesmnd4" Text="-4" HorizontalAlignment="Right" Margin="0,0,10,0" FontFamily="Tempus Sans ITC" VerticalAlignment="Bottom"/>
                                <TextBlock Text="°" HorizontalAlignment="Right" Margin="0,0,1,0" FontFamily="Tempus Sans ITC"/>
                            </Grid>
                            <TextBlock x:Name="comm4" Text="Mostly cloudy" Margin="5,10,0,0" FontFamily="Tempus Sans ITC"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
